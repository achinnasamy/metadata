CREATE DATABASE IF NOT EXISTS dev_bd_pilot;

CREATE TABLE IF NOT EXISTS dev_bd_pilot.OPERATIONAL_METADATA(
    op_type STRING,
    op_name STRING,
    job_type STRING,
    source_entity_name STRING,
    source_type STRING,
    source_system STRING,
    source_path STRING,
    source_schema_name STRING,
    target_entity_name STRING,
    target_type STRING,
    target_path STRING,
    target_schema_name STRING,
    target_system STRING
)
COMMENT 'Metadata Details'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;


CREATE TABLE IF NOT EXISTS dev_bd_pilot.OPERATIONAL_DATA(
    op_type STRING,
    op_name STRING,
    process_id STRING,
    op_start_time_stamp STRING,
    op_end_time_stamp STRING,
    op_status STRING,
    op_owner STRING,
    op_parent_process_name STRING
    src_entity_name STRING,
    src_record_count STRING,
    target_entity_name STRING,
    target_record_count STRING
)
COMMENT 'Metadata Data'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;


CREATE TABLE IF NOT EXISTS dev_bd_pilot.bdpilot_technical_metadata (
    ENTITY_NAME STRING,
    ENTITY_COMMENT STRING,
    FIELD_NAME STRING,
    FIELD_TYPE STRING,
    FIELD_COMMENT STRING,
    FIELD_LENGTH STRING,
    FIELD_PRECISION STRING,
    FIELD_FORMAT STRING,
    TIME_STAMP STRING,
)
COMMENT 'Technical Metadata'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;




CREATE TABLE IF NOT EXISTS dev_bd_pilot.bdpilot_business_metadata (
    BUSINESS_UNIT STRING,
    ENTITY_NAME STRING,
    FIELD_TYPE STRING,
    ENTITY_BUSINESS_DEFINITION STRING,
    FIELD_NAME STRING,
    FIELD_BUSINESS_DEFINITION STRING,
    TIME_STAMP STRING,
)
COMMENT 'Business Metadata'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;