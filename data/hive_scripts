CREATE DATABASE IF NOT EXISTS dev_bd_pilot;

CREATE TABLE IF NOT EXISTS dev_bd_pilot.OPERATIONAL_METADATA(
    op_id SMALLINT,
    opname STRING,
    op_type STRING,
    source_entity_name STRING,
    source_type STRING,
    source_location STRING,
    source_path STRING,
    origin_system STRING,
    source_schema_name STRING,
    target_entity_name STRING,
    target_type STRING,
    target_location STRING,
    target_path STRING,
    target_schema_name STRING
)
COMMENT 'Metadata Details'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;


CREATE TABLE IF NOT EXISTS dev_bd_pilot.OPERATIONAL_DATA(
    op_id SMALLINT,
    op_name STRING,
    process_id STRING,
    op_start_time_stamp TIMESTAMP,
    op_end_time_stamp TIMESTAMP,
    op_eta TIMESTAMP,
    op_status STRING,
    op_owner STRING,
    record_count SMALLINT,
    op_parent_process_name STRING
)
COMMENT 'Metadata Data'
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;